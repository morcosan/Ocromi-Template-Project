{
   "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
         "webpack-env"
      ],
      "paths": {
         "src/*": [
            "src/*"
         ]
      },
      "lib": [
         "esnext",
         "dom",
         "es2017"
      ]
   },
   "include": [
      "src/**/*",
   ],
   "exclude": [
      "docs",
      ".jest"
   ]
}
