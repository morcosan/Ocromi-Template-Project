{
   "compilerOptions": {
      "allowJs": true,
      "sourceMap": true,
      "lib": [
         "es6",
         "dom",
         "es2017"
      ],
      "target": "esnext",
      "strict": true,
      "experimentalDecorators": true,
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": ".",
      "types": [
         "node",
         "jest"
      ],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "paths": {
         "ocromi": [
            "../ocromi"
         ]
      }
   },
   "include": [
      "src/**/*",
      "../ocromi/src/**/*"
   ],
   "exclude": [
      "docs",
      ".jest"
   ]
}
